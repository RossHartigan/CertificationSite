@page "{id:int}"
@model Mining.Pages.SiteDetailsPageModel

<!DOCTYPE html>
<html>
<head>
    <title>Site Details</title>
    <style>
        .navbar-nav .nav-item a {
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-item a:hover {
                color: darkblue;
                background-color: darkgrey;
            }

        .navbar {
            margin-left: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-image: url('/Images/sites2.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 5rem;
            color: #00CED1;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #000;
        }

        .site-details {
            margin: 20px 0;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #000000;
        }

        .employees-container {
            margin: 20px 0;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #000000;
        }

        .site-details h2 {
            color: #00A79D;
        }

        .site-details p {
            color: #00A79D; 
        }

        .employees-container h2 {
            color: #00A79D; 
        }

        .employees-container ul {
            list-style: none;
        }

        .employees-container li {
            color: #00A79D; 
        }

            .employees-container li p {
                color: #00A79D; 
            }

                .employees-container li p strong {
                    color: #000000; 
                }

                .employees-container li p strong {
                    color: #00A79D; 
                }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/SitesPage">SITES</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

        <h1>Site Details</h1>
        <div class="site-details">
            <h2>@Model.Site.SiteName</h2>
                <p><strong><span style="color:white">OWNED BY :</span></strong> <span style="color:#00A79D">@Model.Site.SiteOwner</span></p>
                <p><strong><span style="color:white">LOCATION :</span></strong> <span style="color:#00A79D">@Model.Site.Location</span></p>

                <p><strong><span style="color:white">ID :</span></strong> <span style="color:#00A79D">@Model.Site.SiteId</span></p>
        </div>

        <div class="employees-container">
            <h2>Employees at this site</h2>
            <br />
            <ul>
                @if (Model.Employees != null && Model.Employees.Any())
                {
                    @foreach (var employee in Model.Employees)
                    {
                    <li><span style="color:white">EMPLOYEE ID :</span> <span style="color:#00A79D">@employee.EmployeeId.ToString()</span></li>
                    <p><span style="color:white">NAME :</span> <span style="color:#00A79D">@employee.Name @employee.Surname</span></p>
                    <br />

                    }
                }
                else
                {
                    <li>No active employees found at this site.</li>
                }
            </ul>
        </div>
</body>
</html>



