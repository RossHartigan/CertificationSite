@page
@model Mining.Pages.ContactPageModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Contact Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/Images/login.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
        }

        .header {
            text-align: center;
            font-size: 10rem;
            color: #00CED1;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #000;
        }

        h1 {
            text-align: center;
            font-size: 4rem;
            color: black;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #00CED1;
        }

        h2{
            text-align: center;
            text-decoration: underline;
            margin : 0 auto;
        }

        .container-box {
            max-width: 750px;
            margin: 20px auto;
            background: black;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }


        label {
            color: white;
            font-size: 17px;
            display: block;
        }

        .navbar-nav .nav-item a {
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-item a:hover {
                color: darkblue;
                background-color: darkgrey;
            }

        .navbar {
            margin-left: 0;
        }

        .member-photo {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            object-fit: cover;
            background-color: #000;
            padding: 15px;
            border-radius: 10px;
            display: block;
            margin: 0 auto;
        }

        .team-members {
            border-collapse: separate;
            border-spacing: 10px;
        }


        .member-name {
            text-align: center;
            font-size: 2rem;
            color: black;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #00CED1;
        }

        .member-role {
            font-size: 1rem;
            color: white;
            text-align: center;
        }

        .member-about {
            text-align: center;
        }
        
        .about-us-section, .team-members {
            margin: 0;
            padding: 0;
        }

        .team-members{
            margin : 0 auto;
        }



    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/HomePage">HOME PAGE</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <h1>THE UNCAPPED TEAM</h1>
    <br/>
    <br/>

    <div class="about-us">
        <h2>About Us</h2>
        <table class="team-members">
            <tr>
                <td class="team-member">
                    <img src="/Images/ross.jpg" alt="Ross Hartigan" class="member-photo">
                </td>
                <td class="team-member-details">
                    <p class="member-name">Ross Hartigan</p>
                    <p class="member-role">ROLE: Lead Web Developer</p>
                    <p class="member-about">Ross is a skilled developer with a passion for coding and problem-solving.</p>
                </td>
            </tr>
            <br/>
            <br/>
            <br/>
            <tr>
                <td class="team-member">
                    <img src="/Images/brendin.jpg" alt="Brendin Bester" class="member-photo">
                </td>
                <td class="team-member-details">
                    <p class="member-name">Brendin Bester</p>
                    <p class="member-role">ROLE: Lead App Developer</p>
                    <p class="member-about">Brendin is a creative designer who loves turning ideas into beautiful designs.</p>
                </td>
            </tr>
            <br />
            <br />
            <br />
            <tr>
                <td class="team-member">
                    <img src="/Images/siya.jpg" alt="Siya Sitshongaye" class="member-photo">
                </td>
                <td class="team-member-details">
                    <p class="member-name">Siya Sitshongaye</p>
                    <p class="member-role">ROLE: Project Admin, Web and App Co-Designer</p>
                    <p class="member-about">Siya is a dedicated project admin with a focus on successful delivery.</p>
                </td>
            </tr>
        </table>
    </div>

</body>

</html>
