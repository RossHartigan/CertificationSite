@page
@model Mining.Pages.EmployeeDetailsPageModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Employee Details</title>
    <style>
        .navbar-nav .nav-item a {
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-item a:hover {
                color: darkblue;
                background-color: darkgrey;
            }

        .navbar {
            margin-left: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-image: url('/Images/employees2.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 5rem;
            color: #00CED1;
            text-transform: uppercase;
            text-shadow: 2px 2px 2px #000;
        }

        .employee-details {
            margin: 20px 0;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #000000;
        }

            .employee-details h2 {
                color: #00A79D;
            }

            .employee-details p {
                color: white;
            }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/EmployeesPage">EMPLOYEES</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <h1>Employee Details</h1>
    <div class="employee-details">
        <div class="site-details">
            <h2>@Model.Employee_Details.Name  @Model.Employee_Details.Surname</h2>
            <br/>
            <p><span style="color:#00A79D"><strong>EMPLOYEE ID :</strong></span> @Model.Employee_Details.EmployeeId</p>
            <p><span style="color:#00A79D"><strong>SITE ID :</strong></span> @Model.Employee_Details.SiteId</p>

            @foreach(var cert in Model.certifications)
            {
                @if (Model.certifications != null)
                {
                    <p><span style="color:#00A79D"><strong>CERTIFICATION ID :</strong></span> @cert.CertId</p>
                    <p><span style="color:#00A79D"><strong>CERTIFICATION TYPE :</strong></span> @cert.CertName</p>
                    <p><span style="color:#00A79D"><strong>CERTIFICATION END DATE :</strong></span> @cert.EndDate</p>
                    <br/>
                    <br/>
                }else
                {
                    <p><span style="color:#00A79D"><strong>CERTIFICATION STATUS :</strong></span> NO CERTIFICATIONS </p>
                }
            }
        </div>
    </div>
</body>
</html>

